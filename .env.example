# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_DEFAULT_VERSION=1
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=web-way
DB_PASSWORD=Test@1234
DB_DATABASE=accessibility_tool
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Cache
CACHE_TTL=60
CACHE_MAX_ITEMS=100

# JWT Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# CDN Configuration
CDN_BASE_URL=http://localhost:3000/api
CDN_STORAGE_PATH=assets/scripts
CDN_TOKEN_SECRET=your-cdn-secret-key
CDN_MAX_FILE_SIZE=5242880
CDN_ALLOWED_ORIGINS=*

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email-username
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com
EMAIL_SECURE=false

# File Storage
FILES_UPLOAD_DIR=uploads
FILES_MAX_SIZE=5242880
FILES_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Accessibility Tool API
SWAGGER_DESCRIPTION=API documentation for the Web Accessibility Tool
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Internationalization
I18N_FALLBACK_LANGUAGE=en
I18N_SUPPORTED_LANGUAGES=en,fr
